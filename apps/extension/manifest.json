{
  "manifest_version": 3,
  "name": "ApplyCraft Quick Apply",
  "version": "0.1.0",
  "description": "Send the current job listing to ApplyCraft.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://localhost:3001/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ApplyCraft"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/*",
        "https://*.indeed.com/*",
        "https://*.glassdoor.com/*",
        "https://*.wellfound.com/*",
        "https://*.lever.co/*",
        "https://*.greenhouse.io/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
