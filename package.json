{
  "name": "week4",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.1.27",
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "dotenv": "^17.2.3",
    "pg": "^8.18.0"
  },
  "scripts": {
    "dev:api": "bun --cwd apps/api dev",
    "dev:worker": "bun --cwd apps/worker dev",
    "dev:web": "bun --cwd apps/web dev",
    "dev": "bun run dev:api & bun run dev:worker & bun run dev:web",
    "typecheck": "bun --cwd apps/api typecheck && bun --cwd apps/worker typecheck && bun --cwd apps/web typecheck",
    "db:generate": "bunx prisma generate --schema=prisma/schema.prisma",
    "db:migrate": "bunx prisma migrate dev --schema=prisma/schema.prisma",
    "db:push": "bunx prisma db push --schema=prisma/schema.prisma",
    "db:studio": "bunx prisma studio --schema=prisma/schema.prisma"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "bun-types": "^1.3.8",
    "openai": "^6.17.0",
    "prisma": "^7.3.0"
  }
}
